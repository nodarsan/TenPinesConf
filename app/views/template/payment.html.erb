<div id="section" align="center">
   <form ng-submit="buyTicket()" id="payment-form" >
     <span class="payment-errors"></span>

     <div class="form-row">
       <label>
         <span>Card Number</span>
         <input ng-model="cardNumber" type="text" size="20" data-stripe="number"/>
       </label>
     </div>

     <div class="form-row">
       <label>
         <span>CVC</span>
         <input ng-model="cardCvc" type="text" size="4" data-stripe="cvc"/>
       </label>
     </div>

     <div class="form-row">
       <label>
         <span>Expiration (MM/YYYY)</span>
         <input ng-model="cardExpiryMonth" type="text" size="2" data-stripe="exp-month"/>
       </label>
       <span> / </span>
       <input ng-model="cardExpiryYear" type="text" size="4" data-stripe="exp-year"/>
     </div>

     <button type="submit"> Submit Payment </button>
   </form>
</div>