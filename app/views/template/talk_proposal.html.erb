<div>

    <div id="section" class="container" style="text-align: center" >
      <div id="header">
        <h1>Propose a talk</h1>
      </div>

        <form name="talkProposalForm" ng-submit="submitProposal()">
          <fieldset>
          <h2>Person:</h2>
          <div class="form-group">
            <label>
              Your Name:
              <input type="text" ng-model="newTalkData.speaker.name" required class="form-control">
            </label>
          </div>
          <div class="form-group">
            <label>
              Your Mail:
              <input type="email" ng-model="newTalkData.speaker.mail" name="mail" required class="form-control">
              <div ng-show="talkProposalForm.mail.$dirty && talkProposalForm.mail.$invalid">
                <br><span ng-show="talkProposalForm.mail.$error.email">Invalid: This is not a valid email.</span>
              </div>
            </label>
          </div>
          <div class="form-group">
            <label>
              Your Phone:
              <input type="text" ng-model="newTalkData.speaker.phone" required class="form-control">
            </label>
          </div>
          <div class="form-group">
            <label>
              Your Country:
              <input type="text" ng-model="newTalkData.speaker.country" required class="form-control">
            </label>
          </div>
          <div class="form-group">
            <label>
              Your Bio:
              <textarea ng-model="newTalkData.speaker.bio" required class="form-control"></textarea>
            </label>
          </div>
          <h2>Talk:</h2>
          <div class="form-group">
            <label>
              Title:
              <input type="text" ng-model="newTalkData.talk.title" required class="form-control">
            </label>
          </div>
          <div class="form-group">
            <label>
              Description:
              <textarea ng-model="newTalkData.talk.description" required class="form-control"></textarea>
            </label>
          </div>
          <div class="form-group">
            <label>
              Track:
              <select id="track" ng-model="newTalkData.talk.track" ng-options="track for track in talkConfigs.tracks" class="form-control"></select>
            </label>
          </div>
          <div class="form-group">
            <label>
              Duration:
              <select id="duration" ng-model="newTalkData.talk.duration" ng-options="duration for duration in talkConfigs.durations" class="form-control"></select>
            </label>
          </div>
          <input type="submit" value="Submit" class="btn btn-default">
          </fieldset>
        </form>
    </div>
</div>
